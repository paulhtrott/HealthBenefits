<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!--Setting Security Constraints to Admin sections -->
    <security-role>
        <description>Admin</description>
        <role-name>Admin</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/admin/enterfood.jsp</url-pattern>
            <url-pattern>/admin/adminhome.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Admin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/admin/signin.jsp</form-login-page>
            <form-error-page>/admin/signin.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <!--Servlet Mapping -->
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>UserServlets.SignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>UserServlets.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignOutServlet</servlet-name>
        <servlet-class>UserServlets.SignOutServlet</servlet-class>
    </servlet>
    <servlet>
        <description>Add Food to the database from admin section.</description>
        <servlet-name>AddFoodServlet</servlet-name>
        <servlet-class>FoodServlets.AddFoodServlet</servlet-class>
        <run-as>
            <role-name>Admin</role-name>
        </run-as>
        <security-role-ref>
            <description/>
            <role-name>Admin</role-name>
            <role-link>Admin</role-link>
        </security-role-ref>
    </servlet>
    <servlet>
        <servlet-name>GetFoodByTypeServlet</servlet-name>
        <servlet-class>FoodServlets.GetFoodByTypeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindFoodServlet</servlet-name>
        <servlet-class>FoodServlets.FindFoodServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFullFoodDetailServlet</servlet-name>
        <servlet-class>FoodServlets.GetFullFoodDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignOutServlet</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFoodServlet</servlet-name>
        <url-pattern>/admin/AddFoodServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFoodByTypeServlet</servlet-name>
        <url-pattern>/foods</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindFoodServlet</servlet-name>
        <url-pattern>/searchresults</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFullFoodDetailServlet</servlet-name>
        <url-pattern>/fulldetails</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
